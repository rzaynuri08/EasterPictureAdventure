<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/btnKliklevel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/unlock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="25dp"
        android:fontFamily="@font/stickytoffeesprinklesregular"
        android:text="1"
        android:textColor="#655550"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBintang"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:src="@drawable/b0"
        app:layout_constraintEnd_toEndOf="@+id/btnKliklevel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnKliklevel"
        app:layout_constraintTop_toBottomOf="@+id/btnKliklevel" />

</androidx.constraintlayout.widget.ConstraintLayout>